<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.Post_item"
    android:background="@color/colorlightpurple"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/post"
        android:orientation="vertical">

        <GridView
            android:id="@+id/grid_view"
            android:layout_width="match_parent"
            android:layout_height="229dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/text_view_border"
            android:columnWidth="110dp"
            android:horizontalSpacing="4dp"
            android:numColumns="3"
            android:verticalSpacing="4dp">

        </GridView>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="20dp"
            android:orientation="vertical"
            android:verticalScrollbarPosition="right">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/grid_view"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:text="Name"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/input_name"
                    android:layout_width="192dp"
                    android:layout_height="40dp"
                    android:layout_below="@+id/name"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="2dp"
                    android:hint="Item Name"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/brand"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/input_name"
                    android:layout_marginLeft="20dp"
                    android:text="Brand"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/input_brand"
                    android:layout_width="192dp"
                    android:layout_height="40dp"
                    android:layout_below="@+id/brand"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="2dp"
                    android:hint="Item Brand"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/input_brand"
                    android:layout_marginLeft="20dp"
                    android:text="Price"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/input_price"
                    android:layout_width="192dp"
                    android:layout_height="40dp"
                    android:layout_below="@+id/price"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="2dp"
                    android:hint="$"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/description"
                    android:layout_width="match_parent"
                    android:layout_height="106dp"
                    android:layout_below="@+id/input_price"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/text_view_border"
                    android:gravity="left"
                    android:hint="Description"
                    android:maxLength="150"
                    android:maxLines="4"
                    android:minLines="1"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/count"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/description"
                    android:layout_gravity="right"
                    android:layout_marginRight="20dp"
                    android:text="0/150" />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <Button
        android:id="@+id/cancel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:layout_weight="1"
        android:background="@color/colordarkpurple"
        android:text="CANCEL"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/post" />

    <Button
        android:id="@+id/post"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:layout_weight="1"
        android:background="@color/colordarkpurple"
        android:text="POST"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/cancel"
        app:layout_constraintRight_toRightOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>